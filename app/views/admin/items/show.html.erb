<div class="container px-5 px-sm-0">
 <h2>商品詳細</h2>
 <div class="row">
  <div class="col-md-4">
   <!--<!%= image_tag @item.get_image, size: "200x200" %>-->
   <%= image_tag(@item.get_image(200,200)) %>
  </div>
  <div class="col-md-8">
   <table class="table table-hover table-inverse">
    <tr>
     <td>商品名</td>
     <td><%= @item.name %></td>
    </tr>
    <tr>
     <td>商品説明</td>
     <td><%= @item.introduction %></td>
    </tr>
    <tr>
     <td>ジャンル</td>
     <td><%= @item.genre.name %></td>
    </tr>
    <tr>
     <td>税込価格<br>（税抜価格)</td>
     <td><%= @item.add_tax_price.to_s(:delimited) %>　(<%= @item.price %>)円</td>
    </tr>
    <tr>
     <td>販売ステータス</td>
     <td><%= @item.is_active_i18n %></td>
    </tr>
   </table>
   <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-sm btn-success" %>
  </div>
 </div>
</div>