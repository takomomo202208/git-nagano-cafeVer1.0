<div class="container">
    <h4 class="mt-5 bg-light"><%= @customer.full_name %>さんの会員詳細</h4>

    <table width="400">
        <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
        </tr>
        <tr>
            <td>氏名</td>
            <td><%= @customer.full_name %></td>
        </tr>
        <tr>
            <td>フリガナ</td>
            <td><%= @customer.first_name_kana %>　<%= @customer.last_name_kana %></td>
        </tr>
        <tr>
            <td>郵便番号</td>
            <td>〒<%= @customer.postal_code %></td>
        </tr>
        <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
        </tr>
        <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
        </tr>
        <tr>
            <td>会員ステータス</td>
            <td><%= @customer.is_deleted %></td>
        </tr>
    </table>
</div>
