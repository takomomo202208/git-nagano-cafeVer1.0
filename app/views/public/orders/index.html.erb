<div class="container">
  <div calss="row">
    <div class="col-xs-12">
      <h2>注文履歴一覧</h2>
      <%# if current_customer.cart_items.present? %>
        <table class="table table-bordered">
          <thead>
            <tr class="info">
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>ステータス</th>
              <th>注文詳細</th>
            </tr>
          </thead>
          <tbody>
            <%# if @order.customer_id == current_customer.id %>
            <% @orders.each do |order| %>
              <tr>
                <td class="text-left">
                  <%= order.created_at.strftime('%Y/%m/%d %H:%M') %>
                </td>
                <td class="text-right">
                  <%= order.address %>
                </td>
                <td class="text-left">
                <% order.order_details.each do |detail| %>
                    <%= detail.item.name %><br>
                <% end %>
                </td>
                <td class="text-right">
                  <%= order.total_payment.to_s(:delimited) %>
                </td>
                <td>
                  <%= order.status_i18n %>
                </td>
                <td class="text-center"><%= link_to '表示する', order_path(order), class: 'btn btn-primary' %></td>
              </tr>
            <% end %>
            <%# end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
